<?xml version="1.0" encoding="UTF-8"?>
    <Configuration status="INFO">
    <Properties>
  </Properties>
      <Appenders>
    <File name="MyFile" fileName="logs/app.log">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
    </File>
        <Async name="Async">
      <AppenderRef ref="MyFile"/>
    </Async>
      </Appenders>
      <Loggers>
        <Root level="info">
          <AppenderRef ref="Async"/>
        </Root>
      </Loggers>
    </Configuration>